<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/main_top_layout" />


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <include layout="@layout/chance_list_item" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/tv_chance_detail_"
                            style="@style/chance_offer_text_style"
                            android:layout_marginRight="8dp"
                            android:text="@string/chance_text10"
                            android:textSize="@dimen/new_size_3" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_chance_detail_des"
                        style="@style/chance_offer_text_style"
                        android:layout_width="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/c11_14"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                         />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp" >

                    <TextView
                        android:id="@+id/tv_offer_detail_d"
                        style="@style/chance_offer_text_style"
                        android:layout_centerVertical="true"
                        android:text="@string/chance_text12"
                        android:textSize="@dimen/new_size_3" />

                    <TextView
                        android:id="@+id/tv_offer_detail_address"
                        style="@style/chance_offer_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_offer_detail_d"
                        android:textColor="@color/main_red"
                        android:textSize="@dimen/new_size_3" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/spilt_line_color" />

                <ListView
                    android:id="@+id/lv_chance_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                </ListView>

                <LinearLayout
                    android:id="@+id/ll_chance_offer_message"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/btn_red"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/bt_chance_offer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/c14_13"
                        android:text="@string/chance_text16"
                        android:textColor="@color/main_white"
                        android:textSize="@dimen/new_size_4" />
                </LinearLayout>
            </LinearLayout>
    </ScrollView>
</LinearLayout>