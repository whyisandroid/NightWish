<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/main_top_layout" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:fillViewport="true"
        >
          <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/iv_chat_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/d3_54" />

                <TextView
                    android:id="@+id/tv_chat_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_chat_icon"
                    android:paddingTop="5dp"
                    android:text="二人转演员"
                    android:textColor="@color/color_2"
                    android:textSize="@dimen/new_size_3" />

                <TextView
                    android:id="@+id/tv_chat_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/tv_chat_msg"
                    android:layout_alignLeft="@id/tv_chat_name"
                    android:layout_below="@id/tv_chat_name"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="搜狐视频"
                    android:textColor="@color/color_4"
                    android:textSize="@dimen/new_size_2" />

                <TextView
                    android:id="@+id/tv_chat_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_chat_icon"
                    android:layout_alignLeft="@id/tv_chat_name"
                    android:text="北京  18-24岁 女"
                    android:textColor="@color/color_4"
                    android:textSize="@dimen/new_size_2" />

                <TextView
                    android:id="@+id/tv_chat_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="薪酬 5000/天"
                    android:textColor="@color/color_4"
                    android:textSize="@dimen/new_size_1" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView1"
                style="@style/chance_offer_text_style"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/bggray"
                android:padding="10dp"
                android:text="职位买点：薪酬高 福利好，同事nice环境棒"
                android:textColor="@color/color_5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/spilt_line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp" >

                <TextView
                    android:id="@+id/tv_offer_info"
                    style="@style/chance_offer_text_style"
                    android:text="招募人数" />

                <TextView
                    android:id="@+id/tv_offer_info"
                    style="@style/chance_offer_text_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="4人"
                    android:textColor="@color/color_4" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/spilt_line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp" >

                <TextView
                    android:id="@+id/tv_offer_info"
                    style="@style/chance_offer_text_style"
                    android:text="年龄" />

                <TextView
                    android:id="@+id/tv_offer_info"
                    style="@style/chance_offer_text_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="20-30岁"
                    android:textColor="@color/color_4" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/spilt_line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp" >

                <TextView
                    android:id="@+id/tv_offer_info"
                    style="@style/chance_offer_text_style"
                    android:text="薪水" />

                <TextView
                    android:id="@+id/tv_offer_info"
                    style="@style/chance_offer_text_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="5000/天"
                    android:textColor="@color/color_4" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/spilt_line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp" >

                <TextView
                    android:id="@+id/tv_offer_info"
                    style="@style/chance_offer_text_style"
                    android:text="职位" />

                <TextView
                    android:id="@+id/tv_offer_info"
                    style="@style/chance_offer_text_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="演员"
                    android:textColor="@color/color_4" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/spilt_line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp" >

                <TextView
                    android:id="@+id/tv_offer_info"
                    style="@style/chance_offer_text_style"
                    android:text="工作地点" />

                <TextView
                    android:id="@+id/tv_offer_info"
                    style="@style/chance_offer_text_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="八一电影制片厂"
                    android:textColor="@color/color_4" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/spilt_line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_offer_info"
                    style="@style/chance_offer_text_style"
                    android:text="职位描述" />

                <TextView
                    android:id="@+id/textView3"
                    style="@style/chance_offer_text_style"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:text="职位描述 职位描述职位描述职位描述职位描述职位描述职位描述职位描述职位描述职位描述职位描述职位描述职位描述职位描述职位描述职位描述职位描述职位描述"
                    android:textColor="@color/color_4" />
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:weightSum="2" >

                <LinearLayout
                     android:id="@+id/ll_chance_offer_apply"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_blank"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/c14_13"
                        android:text="我要报名"
                        android:textColor="@color/main_white"
                        android:textSize="@dimen/new_size_4" />
                </LinearLayout>

                <LinearLayout
                     android:id="@+id/ll_chance_offer_message"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_red"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/c14_13"
                        android:text="@string/chance_text16"
                        android:textColor="@color/main_white"
                        android:textSize="@dimen/new_size_4" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>

</LinearLayout>