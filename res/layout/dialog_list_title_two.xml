<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_dialog_top"
        android:gravity="center|left"
        android:orientation="vertical" >

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" >

			<RadioButton
                android:id="@+id/radio0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
            	android:paddingTop="10dp"
                android:background="@drawable/btn_guanzhu"
                android:button="@null"
                android:checked="true"
                android:text="关注"
                android:textColor="@color/color_2"
                android:textSize="14sp" />
            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
            	android:paddingTop="10dp"
                android:background="@drawable/btn_guanzhu"
                android:button="@null"
                android:text="拉黑"
                android:textColor="@color/color_2"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
            	android:paddingTop="10dp"
                android:background="@drawable/btn_guanzhu"
                android:button="@null"
                android:textColor="@color/color_2"
            	android:textSize="14sp"
                android:text="举报此人" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2" >

        <Button
            android:id="@+id/bt_dialog_no_title_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bt_dialog_left"
            android:text="取消"
            android:textColor="@color/color_2"
            android:textSize="15sp" />

        <Button
            android:id="@+id/bt_dialog_no_title_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bt_dialog_right"
            android:text="确认"
            android:textColor="@color/color_2"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>