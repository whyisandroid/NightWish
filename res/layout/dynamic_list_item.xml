<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/iv_dynamic_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/dynamic_head_xh" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_dynamic_head"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_dynamic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我在等你"
                android:textColor="@color/color_4"
                android:textSize="@dimen/new_size_2" />

            <ImageView
                android:id="@+id/iv_dynamic_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/btn_image_dynamic_pass" />

            <ImageView
                android:id="@+id/iv_dynamic_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/btn_image_dynamic_sex" />

            <TextView
                android:id="@+id/tv_dynamic_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="21"
                android:textColor="@color/color_4"
                android:textSize="@dimen/new_size_1" />

            <TextView
                android:id="@+id/tv_dynamic_constella"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="双子座"
                android:textColor="@color/color_4"
                android:textSize="@dimen/new_size_1" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_dynamic_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/dynamic_text1"
            android:textColor="@color/color_2"
            android:textSize="@dimen/new_size_2" />

         <com.timetalent.client.ui.view.HorizontalListView
             android:id="@+id/hlv_dynamic_pic"
             android:layout_width="match_parent"
             android:layout_height="60dp"
             android:layout_marginTop="6dp" >

                </com.timetalent.client.ui.view.HorizontalListView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_dynamic_add_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:text="+ 1"
                android:textColor="@color/bt_green"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <ImageView
                    android:id="@+id/iv_dynamic_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/d10_36" />

                <TextView
                    android:id="@+id/tv_dynamic_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/iv_dynamic_time"
                    android:text="10分钟前"
                    android:textColor="@color/color_4"
                    android:textSize="@dimen/new_size_1" />

                <TextView
                    android:id="@+id/iv_dynamic_good_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_toLeftOf="@+id/iv_dynamic_good"
                    android:text="0"
                    android:textColor="@color/color_4"
                    android:textSize="@dimen/new_size_1" />

                <ImageView
                    android:id="@+id/iv_dynamic_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/iv_dynamic_message"
                    android:src="@drawable/btn_image_dynamic_good" />

                <ImageView
                    android:id="@+id/iv_dynamic_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/d3_46" />
            </RelativeLayout>
        </RelativeLayout>

        <ListView
            android:id="@+id/lv_dynamic_replay"
            android:layout_width="match_parent"
            android:background="@color/main_grey"
            android:layout_height="wrap_content" >
        </ListView>

        <LinearLayout
            android:id="@+id/ll_dynamic_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_grey"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="8dp"
             >

            <TextView
                android:id="@+id/tv_dynamic_replayname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_5"
                android:textSize="@dimen/new_size_1"
                android:text="我在等你: "
                 />

            <EditText
                android:id="@+id/et_dynamic_message"
                android:layout_width="252dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="8dp"
                android:textColor="@color/color_5"
                android:textSize="@dimen/new_size_1" >
                <requestFocus />
            </EditText>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>