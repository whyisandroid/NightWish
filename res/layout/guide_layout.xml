<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
  <android.support.v4.view.ViewPager
        android:id="@+id/guide_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_grey" 
        >

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical" >
      </LinearLayout>

  </android.support.v4.view.ViewPager>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/imageView1"
      android:orientation="vertical" >

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="#00000000"
          android:layout_gravity="center"
          android:visibility="gone"
          android:orientation="horizontal" >

          <ImageButton
              android:id="@+id/dot_guide_imageView1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/unread_dot" />

          <ImageButton
              android:id="@+id/dot_guide_imageView2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:background="@drawable/unread_dot" />

          <ImageButton
              android:id="@+id/dot_guide_imageView3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:background="@drawable/unread_dot" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:gravity="center"
           >

          <Button
              android:id="@+id/bt_guide_register"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/bt_new_register"
              android:textColor="@color/white"
              android:layout_marginRight="10dp"
              android:text="用户注册"
              android:textSize="@dimen/new_size_4"
              />

          <Button
              android:id="@+id/bt_guide_login"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:background="@drawable/bt_new_login"
              android:textColor="@color/white"
              android:text="用户登录"
              android:textSize="@dimen/new_size_4"
              />

      </LinearLayout>

  </LinearLayout>

  <ImageView
      android:id="@+id/imageView1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:src="@drawable/guide_ic_launcher" />

</RelativeLayout>
