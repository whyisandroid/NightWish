<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imghead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:src="@drawable/f3_11" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="4"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我在等你"
                android:textColor="@color/color_4"
                android:textSize="@dimen/new_size_3" />

            <ImageView
                android:id="@+id/imgonline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/f3_13" />

            <ImageView
                android:id="@+id/imgsex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:src="@drawable/f3_15" />

            <TextView
                android:id="@+id/tvage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="21岁"
                android:textColor="@color/color_4"
                android:textSize="@dimen/new_size_3" />

            <TextView
                android:id="@+id/tvonlinetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="双子座"
                android:gravity="right"
                android:textColor="@color/color_4"
                android:textSize="@dimen/new_size_3" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvmiaoshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="每一朵玫瑰都有刺，正如每个人的性格里都有你不能容忍的部分。爱护每一朵玫瑰，并不是要努力地把它的刺根除"
            android:textColor="@color/color_2"
            android:textSize="@dimen/new_size_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/f10_36" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10分钟前"
                android:textColor="@color/color_3"
                android:textSize="@dimen/new_size_2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="121"
                android:textColor="@color/color_3"
                android:textSize="@dimen/new_size_2" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:src="@drawable/f3_44" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/f3_46" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>