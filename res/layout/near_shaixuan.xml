<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_light_white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="您想看到的用户"
            android:textColor="@color/color_4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/main_light_white" >

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:padding="7dp"
                    android:background="@drawable/btn_l"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/color_4"
                    android:text="全部" />

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="7dp"
                    android:background="@drawable/btn_c"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/color_4"
                    android:text="只看女" />

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="7dp"
                    android:background="@drawable/btn_r"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/color_4"
                    android:text="只看男" />
            </RadioGroup>
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="用户年龄"
            android:textColor="@color/texthui" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/new_color_4" >

            <RadioGroup
                android:id="@+id/RadioGroup03"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/RadioButton08"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_l"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="全部"
                    android:textColor="@color/color_4" />

                <RadioButton
                    android:id="@+id/RadioButton10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_c"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="10-16岁"
                    android:textColor="@color/color_4" />

                <RadioButton
                    android:id="@+id/RadioButton09"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_c"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="16-24岁"
                    android:textColor="@color/color_4" />

                <RadioButton
                    android:id="@+id/RadioButton11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_r"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="24-30岁"
                    android:textColor="@color/color_4" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/new_color_4" >

            <RadioGroup
                android:id="@+id/RadioGroup04"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/RadioButton12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_l"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="30-36岁"
                    android:textColor="@color/color_4" />

                <RadioButton
                    android:id="@+id/RadioButton14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_c"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="36-42岁"
                    android:textColor="@color/color_4" />

                <RadioButton
                    android:id="@+id/RadioButton13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_c"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="42-50岁"
                    android:textColor="@color/color_4" />

                <RadioButton
                    android:id="@+id/RadioButton15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_r"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="50-60岁"
                    android:textColor="@color/color_4" />
            </RadioGroup>

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="职业"
            android:textColor="@color/texthui" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/new_color_4" >

            <RadioGroup
                android:id="@+id/RadioGroup01"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/RadioButton04"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_l"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="全部"
                    android:textColor="@color/color_4" />

                <RadioButton
                    android:id="@+id/RadioButton03"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_c"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="艺人"
                    android:textColor="@color/color_4" />

                <RadioButton
                    android:id="@+id/RadioButton01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_c"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="星探"
                    android:textColor="@color/color_4" />

                <RadioButton
                    android:id="@+id/RadioButton02"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_r"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="粉丝"
                    android:textColor="@color/color_4" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/new_color_4" >

            <RadioGroup
                android:id="@+id/RadioGroup02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/RadioButton07"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_l"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="歌手"
                    android:textColor="@color/color_4" />

                <RadioButton
                    android:id="@+id/RadioButton05"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_c"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="模特"
                    android:textColor="@color/color_4" />

                <RadioButton
                    android:id="@+id/RadioButton06"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_r"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="演员"
                    android:textColor="@color/color_4" />
            </RadioGroup>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btcanel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_c"
            android:text="取消"
            android:textColor="@color/color_4" />

        <Button
            android:id="@+id/btok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_c"
            android:text="确认"
            android:textColor="@color/new_color_5" />
    </LinearLayout>

</LinearLayout>
